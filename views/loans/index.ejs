<!DOCTYPE html>
<html lang="es" class="h-full">

<head>
    <meta charset="UTF-8">
    <title>Listado de Pr√©stamos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="bg-emerald-50 flex min-h-screen w-screen">

    <!-- SIDEBAR -->
    <%- include('../plantillas/sidebar') %>

        <!-- CONTENIDO PRINCIPAL -->
        <div class="flex flex-col flex-1 w-full min-h-screen">

            <!-- HEADER -->

            <%- include('../plantillas/header2.ejs') %>

                <!-- MAIN -->
                <main class="flex-1 p-4">
                    <div class="container-fluid">
                        <% if (messages.success) { %>
                            <div class="alert alert-success"><%- messages.success %></div>
                            <% } %>
                                <% if (messages.error) { %>
                                    <div class="alert alert-danger"><%- messages.error %></div>
                                    <% } %>

                                        <div class="card">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <h5 class="mb-0">üìñ Listado de Pr√©stamos</h5>
                                                <a href="/loans/add" class="btn btn-success">A√±adir Pr√©stamo</a>
                                            </div>

                                            <div class="card-body">
                                                <form method="GET" action="/loans" class="form-inline mb-3">
                                                    <input type="text" name="search" value="<%= searchTerm %>"
                                                        placeholder="Buscar por usuario o libro..."
                                                        class="form-control mr-2">
                                                    <button type="submit"
                                                        class="btn btn-outline-success">Buscar</button>
                                                    <% if (searchTerm) { %>
                                                        <a href="/loans"
                                                            class="btn btn-outline-secondary ml-2">Limpiar</a>
                                                        <% } %>
                                                </form>

                                                <% if (data.length> 0) { %>
                                                    <div class="table-responsive">
                                                        <table class="table table-striped">
                                                            <thead>
                                                                <tr>
                                                                    <th>#</th>
                                                                    <th>Usuario</th>
                                                                    <th>Libro</th>
                                                                    <th>Fecha Pr√©stamo</th>
                                                                    <th>Fecha Devoluci√≥n</th>
                                                                    <th>Estado</th>
                                                                    <th class="text-center">Acciones</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% data.forEach((loan, i)=> { %>
                                                                    <tr>
                                                                        <td>
                                                                            <%= ((currentPage - 1) * 5) + (i + 1) %>
                                                                        </td>
                                                                        <td>
                                                                            <%= loan.user_name %>
                                                                        </td>
                                                                        <td>
                                                                            <%= loan.book_name %>
                                                                        </td>
                                                                        <td>
                                                                            <%= new
                                                                                Date(loan.loan_date).toLocaleDateString()
                                                                                %>
                                                                        </td>
                                                                        <td>
                                                                            <%= loan.return_date ? new
                                                                                Date(loan.return_date).toLocaleDateString()
                                                                                : 'Pendiente' %>
                                                                        </td>
                                                                        <td>
                                                                            <span
                                                                                class="badge badge-<%= loan.status === 'RETURNED' ? 'success' : 'warning' %>">
                                                                                <%= loan.status==='RETURNED'
                                                                                    ? 'Devuelto' : 'Prestado' %>
                                                                            </span>
                                                                        </td>
                                                                        <td class="text-center">
                                                                            <a href="/loans/edit/<%= loan.id_loan %>"
                                                                                class="btn btn-sm btn-warning">
                                                                                <i class="fas fa-edit"></i> Editar
                                                                            </a>
                                                                            <% if (!loan.returned) { %>
                                                                                <a href="/loans/continue/<%= loan.id_loan %>"
                                                                                    class="btn btn-sm btn-info"
                                                                                    onclick="return confirm('¬øDesea continuar este pr√©stamo por otro per√≠odo?')">
                                                                                    <i class="fas fa-sync"></i>
                                                                                    Continuar
                                                                                </a>
                                                                                <a href="/loans/return/<%= loan.id_loan %>"
                                                                                    class="btn btn-sm btn-success"
                                                                                    onclick="return confirm('¬øConfirmar la devoluci√≥n de este libro?')">
                                                                                    <i class="fas fa-undo"></i> Devolver
                                                                                </a>
                                                                                <% } %>
                                                                        </td>
                                                                    </tr>
                                                                    <% }) %>
                                                            </tbody>
                                                        </table>
                                                    </div>

                                                    <% if (totalPages> 1) { %>
                                                        <nav class="mt-3">
                                                            <ul class="pagination justify-content-center">
                                                                <li
                                                                    class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                                    <a class="page-link"
                                                                        href="/loans?page=<%= currentPage - 1 %><%= searchTerm ? '&search=' + searchTerm : '' %>">
                                                                        &laquo;
                                                                    </a>
                                                                </li>
                                                                <% for (let i=1; i <=totalPages; i++) { %>
                                                                    <li
                                                                        class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                                        <a class="page-link"
                                                                            href="/loans?page=<%= i %><%= searchTerm ? '&search=' + searchTerm : '' %>">
                                                                            <%= i %>
                                                                        </a>
                                                                    </li>
                                                                    <% } %>
                                                                        <li
                                                                            class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                                            <a class="page-link"
                                                                                href="/loans?page=<%= currentPage + 1 %><%= searchTerm ? '&search=' + searchTerm : '' %>">
                                                                                &raquo;
                                                                            </a>
                                                                        </li>
                                                            </ul>
                                                        </nav>
                                                        <% } %>
                                                            <% } else { %>
                                                                <div class="text-center text-muted py-5">
                                                                    <% if (searchTerm) { %>
                                                                        <p>No se encontraron pr√©stamos con "<%=
                                                                                searchTerm %>"</p>
                                                                        <a href="/loans"
                                                                            class="btn btn-outline-secondary">Ver
                                                                            todos</a>
                                                                        <% } else { %>
                                                                            <p>No hay pr√©stamos registrados.</p>
                                                                            <a href="/loans/add"
                                                                                class="btn btn-success">Registrar el
                                                                                primero</a>
                                                                            <% } %>
                                                                </div>
                                                                <% } %>
                                            </div>
                                        </div>
                    </div>
                </main>

                <!-- FOOTER -->
                <%- include('../plantillas/footer.ejs') %>

        </div>

        <!-- Font Awesome -->
        <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
</body>

</html>