<!DOCTYPE html>
<html lang="es" class="h-full">

<head>
    <meta charset="UTF-8">
    <title>A√±adir Pr√©stamo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="bg-emerald-50 flex min-h-screen w-screen">

    <!-- SIDEBAR -->
    <%- include('../plantillas/sidebar') %>

        <!-- CONTENIDO PRINCIPAL -->
        <div class="flex flex-col flex-1 w-full min-h-screen">

            <!-- HEADER -->
            <%- include('../plantillas/header1') %>

                <!-- MAIN -->
                <main class="flex-1 p-4">
                    <div class="container">
                        <% if (messages && messages.error) { %>
                            <div class="alert alert-danger"><%- messages.error %></div>
                            <% } %>

                                <div class="card shadow-sm">
                                    <div class="card-header">
                                        <h4 class="mb-0">üìö A√±adir Pr√©stamo</h4>
                                    </div>
                                    <div class="card-body">
                                        <form action="/loans/add" method="POST">
                                            <div class="form-group mb-3">
                                                <label>Usuario:</label>
                                                <select name="id_user" id="id_user" class="form-control" required>
                                                    <option value="">Seleccione un usuario</option>
                                                    <% users.forEach(function(user) { %>
                                                        <option value="<%= user.id_user %>">
                                                            <%= user.name %> (<%= user.email %>)
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label>Libro:</label>
                                                <select name="id_book" id="id_book" class="form-control" required>
                                                    <option value="">Seleccione un libro</option>
                                                    <% books.forEach(function(book) { %>
                                                        <option value="<%= book.id_book %>">
                                                            <%= book.name %> - <%= book.author_name %> (<%=
                                                                        book.publisher_name %>)
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label>Fecha de devoluci√≥n:</label>
                                                <input type="date" name="return_due" id="return_due"
                                                    class="form-control" required
                                                    min="<%= new Date().toISOString().split('T')[0] %>"
                                                    max="<%= new Date(Date.now() + 30*24*60*60*1000).toISOString().split('T')[0] %>"
                                                    value="<%= new Date(Date.now() + 7*24*60*60*1000).toISOString().split('T')[0] %>">
                                                <small class="form-text text-muted">El per√≠odo predeterminado de
                                                    pr√©stamo es de 7 d√≠as (m√°ximo 30 d√≠as)</small>
                                            </div>
                                            <div class="mt-4">
                                                <button type="submit" class="btn btn-success">
                                                    <i class="fas fa-save"></i> Guardar
                                                </button>
                                                <a href="/loans" class="btn btn-secondary ms-2">
                                                    <i class="fas fa-arrow-left"></i> Cancelar
                                                </a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                    </div>
                </main>

                <!-- FOOTER -->
                <%- include('../plantillas/footer') %>
        </div>

        <!-- Font Awesome -->
        <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
</body>

</html>