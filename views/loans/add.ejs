<!DOCTYPE html>
<html lang="es" class="h-full">

<head>
    <meta charset="UTF-8">
    <title>Añadir Préstamo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body class="bg-emerald-50 flex min-h-screen w-screen">

    <!-- SIDEBAR -->
    <%- include('../plantillas/sidebar') %>

        <!-- CONTENIDO PRINCIPAL -->
        <div class="flex flex-col flex-1 w-full min-h-screen">

            <!-- HEADER -->
            <%- include('../plantillas/header1.ejs') %>
                <%- include('../plantillas/header2.ejs') %>

                    <!-- MAIN -->
                    <main class="flex-1 p-4">
                        <div class="container mx-auto px-4 py-8">
                            <div class="max-w-2xl mx-auto">
                                <h1 class="text-2xl font-bold mb-6">Nuevo Préstamo</h1>

                                <!-- Mensajes flash -->
                                <% if (messages.error) { %>
                                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4"
                                        role="alert">
                                        <span class="block sm:inline">
                                            <%= messages.error %>
                                        </span>
                                    </div>
                                    <% } %>

                                        <form action="/loans/add" method="POST" class="space-y-6">
                                            <!-- Usuario -->
                                            <div>
                                                <label for="id_user"
                                                    class="block text-sm font-medium text-gray-700">Usuario</label>
                                                <select name="id_user" id="id_user" required
                                                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                                                    <option value="">Seleccione un usuario</option>
                                                    <% users.forEach(function(user) { %>
                                                        <option value="<%= user.id_user %>">
                                                            <%= user.name %> (<%= user.email %>)
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>

                                            <!-- Libro -->
                                            <div>
                                                <label for="id_book"
                                                    class="block text-sm font-medium text-gray-700">Libro</label>
                                                <select name="id_book" id="id_book" required
                                                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                                                    <option value="">Seleccione un libro</option>
                                                    <% books.forEach(function(book) { %>
                                                        <option value="<%= book.id_book %>">
                                                            <%= book.name %> - <%= book.author_name %> (<%=
                                                                        book.publisher_name %>)
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>

                                            <!-- Fecha de devolución -->
                                            <div>
                                                <label for="return_due"
                                                    class="block text-sm font-medium text-gray-700">Fecha de
                                                    devolución</label>
                                                <input type="date" name="return_due" id="return_due" required
                                                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                                                    min="<%= new Date().toISOString().split('T')[0] %>"
                                                    max="<%= new Date(Date.now() + 30*24*60*60*1000).toISOString().split('T')[0] %>">
                                                <small class="text-gray-500">El período máximo de préstamo es de 30
                                                    días</small>
                                            </div>

                                            <!-- Botones -->
                                            <div class="flex gap-4">
                                                <button type="submit"
                                                    class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                                                    Guardar
                                                </button>
                                                <a href="/loans"
                                                    class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">
                                                    Cancelar
                                                </a>
                                            </div>
                                        </form>
                            </div>
                        </div>
                    </main>

                    <!-- FOOTER -->
                    <%- include('../plantillas/footer.ejs') %>
        </div>

        <!-- Font Awesome -->
        <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
</body>

</html>