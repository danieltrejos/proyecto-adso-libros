<!DOCTYPE html>
<html lang="es" class="h-full">

<head>
    <meta charset="UTF-8">
    <title>Listado de Categor√≠as</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="bg-emerald-50 flex min-h-screen w-screen">

    <!-- SIDEBAR -->
    <%- include('../plantillas/sidebar') %>

        <!-- CONTENIDO PRINCIPAL -->
        <div class="flex flex-col flex-1 w-full min-h-screen">

            <!-- HEADER -->
            <%- include('../plantillas/header1') %>

                <!-- MAIN -->
                <main class="flex-1 p-4">
                    <div class="container-fluid">

                        <% if (messages.success) { %>
                            <div class="alert alert-success"><%- messages.success %></div>
                            <% } %>
                                <% if (messages.error) { %>
                                    <div class="alert alert-danger"><%- messages.error %></div>
                                    <% } %>

                                        <div class="card">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <h5 class="mb-0">üè∑Ô∏è Listado de Categor√≠as</h5>
                                                <a href="/categories/add" class="btn btn-success">A√±adir Categor√≠a</a>
                                            </div>

                                            <div class="card-body">
                                                <form method="GET" action="/categories" class="form-inline mb-3">
                                                    <input type="text" name="search" value="<%= searchTerm %>"
                                                        placeholder="Buscar categor√≠a..." class="form-control mr-2">
                                                    <button type="submit"
                                                        class="btn btn-outline-success">Buscar</button>
                                                    <% if (searchTerm) { %>
                                                        <a href="/categories"
                                                            class="btn btn-outline-secondary ml-2">Limpiar</a>
                                                        <% } %>
                                                </form>

                                                <% if (data.length> 0) { %>
                                                    <table class="table table-striped">
                                                        <thead>
                                                            <tr>
                                                                <th>#</th>
                                                                <th>Nombre</th>
                                                                <th class="text-center">Acciones</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% data.forEach((category, i)=> { %>
                                                                <tr>
                                                                    <td>
                                                                        <%= ((currentPage - 1) * 5) + (i + 1) %>
                                                                    </td>
                                                                    <td>
                                                                        <%= category.name %>
                                                                    </td>
                                                                    <td class="text-center">
                                                                        <a href="/categories/edit/<%= category.id_category %>"
                                                                            class="btn btn-sm btn-warning">
                                                                            <i class="fas fa-edit"></i> Editar
                                                                        </a>
                                                                        <a href="/categories/delete/<%= category.id_category %>"
                                                                            onclick="return confirm('¬øEst√° seguro que desea eliminar esta categor√≠a?')"
                                                                            class="btn btn-sm btn-danger">
                                                                            <i class="fas fa-trash"></i> Eliminar
                                                                        </a>
                                                                    </td>
                                                                </tr>
                                                                <% }) %>
                                                        </tbody>
                                                    </table>

                                                    <% if (totalPages> 1) { %>
                                                        <nav class="mt-3">
                                                            <ul class="pagination justify-content-center">
                                                                <li
                                                                    class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                                    <a class="page-link"
                                                                        href="/categories?page=<%= currentPage - 1 %><%= searchTerm ? '&search=' + searchTerm : '' %>">&laquo;</a>
                                                                </li>
                                                                <% for (let i=1; i <=totalPages; i++) { %>
                                                                    <li
                                                                        class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                                        <a class="page-link"
                                                                            href="/categories?page=<%= i %><%= searchTerm ? '&search=' + searchTerm : '' %>">
                                                                            <%= i %>
                                                                        </a>
                                                                    </li>
                                                                    <% } %>
                                                                        <li
                                                                            class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                                            <a class="page-link"
                                                                                href="/categories?page=<%= currentPage + 1 %><%= searchTerm ? '&search=' + searchTerm : '' %>">&raquo;</a>
                                                                        </li>
                                                            </ul>
                                                        </nav>
                                                        <% } %>
                                                            <% } else { %>
                                                                <div class="text-center text-muted py-5">
                                                                    <% if (searchTerm) { %>
                                                                        <p>No se encontraron categor√≠as con "<%=
                                                                                searchTerm %>"</p>
                                                                        <a href="/categories"
                                                                            class="btn btn-outline-secondary">Ver
                                                                            todas</a>
                                                                        <% } else { %>
                                                                            <p>No hay categor√≠as registradas.</p>
                                                                            <a href="/categories/add"
                                                                                class="btn btn-success">Agregar la
                                                                                primera</a>
                                                                            <% } %>
                                                                </div>
                                                                <% } %>
                                            </div>
                                        </div>

                    </div>
                </main>

                <!-- FOOTER -->
                <%- include('../plantillas/footer') %>

        </div>

        <!-- Font Awesome -->
        <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
</body>

</html>