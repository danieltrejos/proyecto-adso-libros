<!DOCTYPE html>
<html lang="es" class="h-full">

<head>
    <meta charset="UTF-8">
    <title>Listado de Autores</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="bg-emerald-50 flex min-h-screen w-screen">

    <!-- SIDEBAR -->
    <%- include('../plantillas/sidebar') %>

        <!-- CONTENIDO PRINCIPAL -->
        <div class="flex flex-col flex-1 w-full min-h-screen">

            <!-- HEADER -->
            <%- include('../plantillas/header1') %>

                <!-- MAIN -->
                <main class="flex-1 p-4">
                    <div class="container-fluid">
                        <% if (messages.success) { %>
                            <div class="alert alert-success"><%- messages.success %></div>
                            <% } %>
                                <% if (messages.error) { %>
                                    <div class="alert alert-danger"><%- messages.error %></div>
                                    <% } %>

                                        <div class="card">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <h5 class="mb-0">ðŸ‘¤ Listado de Autores</h5>
                                                <a href="/authors/add" class="btn btn-success">AÃ±adir Autor</a>
                                            </div>

                                            <div class="card-body">
                                                <form action="/authors" method="GET" class="form-inline mb-3">
                                                    <input type="text" name="search" value="<%= searchTerm %>"
                                                        placeholder="Buscar autor..." class="form-control mr-2" style="min-width: 300px;">
                                                    <button type="submit"
                                                        class="btn btn-outline-success">Buscar</button>
                                                    <% if (searchTerm) { %>
                                                        <a href="/authors"
                                                            class="btn btn-outline-secondary ml-2">Limpiar</a>
                                                        <% } %>
                                                </form>

                                                <% if(data.length) { %>
                                                    <table class="table table-striped">
                                                        <thead>
                                                            <tr>
                                                                <th>#</th>
                                                                <th>Nombre</th>
                                                                <th class="text-center">Acciones</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% for(let i=0; i < data.length; i++) { %>
                                                                <tr>
                                                                    <td>
                                                                        <%= ((currentPage-1)*5)+(i+1) %>
                                                                    </td>
                                                                    <td>
                                                                        <%= data[i].name %>
                                                                    </td>
                                                                    <td class="text-center">
                                                                        <a href="/authors/edit/<%= data[i].id_author %>"
                                                                            class="btn btn-sm btn-warning">
                                                                            <i class="fas fa-edit"></i> Editar
                                                                        </a>
                                                                        <a href="/authors/delete/<%= data[i].id_author %>"
                                                                            class="btn btn-sm btn-danger"
                                                                            onclick="return confirm('Â¿EstÃ¡ seguro que desea eliminar este autor?')">
                                                                            <i class="fas fa-trash"></i> Eliminar
                                                                        </a>
                                                                    </td>
                                                                </tr>
                                                                <% } %>
                                                        </tbody>
                                                    </table>

                                                    <!-- PaginaciÃ³n -->
                                                    <% if(totalPages> 1) { %>
                                                        <nav aria-label="Page navigation" class="mt-4">
                                                            <ul class="pagination justify-content-center">
                                                                <% for(let i=1; i <=totalPages; i++) { %>
                                                                    <li
                                                                        class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                                        <a class="page-link"
                                                                            href="/authors?page=<%= i %><%= searchTerm ? '&search=' + searchTerm : '' %>">
                                                                            <%= i %>
                                                                        </a>
                                                                    </li>
                                                                    <% } %>
                                                            </ul>
                                                        </nav>
                                                        <% } %>
                                                            <% } else { %>
                                                                <div class="text-center text-muted py-5">
                                                                    <% if (searchTerm) { %>
                                                                        <p>No se encontraron autores con "<%= searchTerm
                                                                                %>"
                                                                        </p>
                                                                        <a href="/authors"
                                                                            class="btn btn-outline-secondary">Ver
                                                                            todos</a>
                                                                        <% } else { %>
                                                                            <p>No hay autores registrados.</p>
                                                                            <a href="/authors/add"
                                                                                class="btn btn-success">Agregar el
                                                                                primero</a>
                                                                            <% } %>
                                                                </div>
                                                                <% } %>
                                            </div>
                                        </div>
                    </div>
                </main>

                <!-- FOOTER -->
                <%- include('../plantillas/footer') %>

        </div>

        <!-- Font Awesome -->
        <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
</body>

</html>