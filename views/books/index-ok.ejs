<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Books</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body>

    <div class="min-h-screen flex flex-col bg-gradient-to-b from-white to-emerald-00">


        <%- include('../plantillas/header1') %>

            <div class=" container" style="margin-top: 50px;">
                <% if (messages.success) { %>
                    <div class="alert alert-success" role="alert"><%- messages.success %></div>
                    <% } %>

                        <% if (messages.error) { %>
                            <div class="alert alert-danger" role="alert"><%- messages.error %></div>
                            <% } %>

                                <div class="card">
                                    <div
                                        class="flex justify-between items-center px-6 py-4 bg-gray-100 rounded-t-lg border-b border-gray-200">
                                        <h2 class="text-lg font-semibold text-gray-800">Libros</h2>
                                        <div class="bg-emerald-600 hover:bg-emerald-700 text-white rounded">
                                            <a href="/books/add"
                                                class="inline-flex items-center justify-center px-5 py-2 text-sm font-medium text-white bg-emerald-600 rounded-lg shadow  transition focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
                                                AÃ±adir Libros
                                            </a>
                                        </div>
                                    </div>
                                    <div class="card-body">

                                        <% if(data.length) { %>
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">Nombre</th>
                                                        <th scope="col">Autor</th>
                                                        <th width="200px" class="flex justify-center w-full">Acciones
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(var i=0; i< data.length; i++) { %>
                                                        <tr>
                                                            <th scope="row">
                                                                <%= (i+1) %>
                                                            </th>
                                                            <td>
                                                                <%= data[i].name%>
                                                            </td>
                                                            <td>
                                                                <%= data[i].author%>
                                                            </td>
                                                            <td class="d-flex justify-content-around">
                                                                <a href="../books/edit/<%=data[i].id%>"
                                                                    class="hover:text-emerald-900">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                                                                        viewBox="0 0 24 24" stroke-width="1.5"
                                                                        stroke="currentColor"
                                                                        class="size-6 text-emerald-600 hover:text-emerald-900 transition-colors">
                                                                        <path stroke-linecap="round"
                                                                            stroke-linejoin="round"
                                                                            d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                                                                    </svg>
                                                                </a>
                                                                <a href="../books/delete/<%=data[i].id%>"
                                                                    onclick="return alert('Estas seguro?')"
                                                                    class="hover:text-red-700">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                                                                        viewBox="0 0 24 24" stroke-width="1.5"
                                                                        stroke="currentColor"
                                                                        class="size-6 text-red-500 hover:text-red-700 transition-colors">
                                                                        <path stroke-linecap="round"
                                                                            stroke-linejoin="round"
                                                                            d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                                                    </svg>
                                                                </a>
                                                                <!-- <a class="btn btn-success edit"
                                                                    href="../books/edit/<%=data[i].id%>">Editar</a>
                                                                <a class="btn btn-danger delete"
                                                                    onclick="return alert('Estas seguro?')"
                                                                    href="../books/delete/<%=data[i].id%>">Eliminar</a> -->
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                </tbody>
                                            </table>
                                            <% } %>

                                                <!-- if result is empty -->
                                                <% if(!data.length) { %>
                                                    <p class="text-center">Libros no encontrados!</p>
                                                    <% } %>

                                    </div>
                                </div>

            </div>

    </div>

    <%- include('../plantillas/footer') %>
</body>

</html>