<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Listado de libros</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <!-- Estilos personalizados para la paginación -->
    <style>
        /* Personalización de paginación con colores emerald de Tailwind */
        .pagination .page-link {
            color: #475569;
            /* text-slate-600 */
            border-color: #e2e8f0;
            /* border-slate-200 */
        }

        .pagination .page-item.active .page-link {
            background-color: #059669;
            /* bg-emerald-600 */
            border-color: #047857;
            /* border-emerald-700 */
            color: white;
        }

        .pagination .page-link:hover:not(.active) {
            background-color: #ecfdf5;
            /* bg-emerald-50 */
            color: #065f46;
            /* text-emerald-800 */
        }

        .pagination .page-item.disabled .page-link {
            color: #94a3b8;
            /* text-slate-400 */
            background-color: #f8fafc;
            /* bg-slate-50 */
        }

        .buscar {
            border: 11px solid #059669;
            border-radius: 6px;
        }
    </style>
</head>

<body>

    <div class="min-h-screen flex flex-col bg-gradient-to-b from-white to-emerald-00">


        <%- include('../plantillas/header1') %>

            <div class="container" style="margin-top: 50px;">
                <% if (messages.success) { %>
                    <div class="alert alert-success" role="alert"><%- messages.success %></div>
                    <% } %>

                        <% if (messages.error) { %>
                            <div class="alert alert-danger" role="alert"><%- messages.error %></div>
                            <% } %>

                                <div class="card">
                                    <div
                                        class="flex justify-between items-center px-6 py-4 bg-gray-100 rounded-t-lg border-b border-gray-200">
                                        <h2 class="text-lg font-semibold text-gray-800">Listado de libros</h2>
                                        <div class="bg-emerald-600 hover:bg-emerald-700 text-white rounded">
                                            <a href="/books/add"
                                                class="inline-flex items-center justify-center px-5 py-2 text-sm font-medium text-white bg-emerald-600 rounded-lg shadow transition focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
                                                Añadir Libros
                                            </a>
                                        </div>
                                    </div>

                                    <!-- Search form -->
                                    <div class="p-4 bg-white border-b">
                                        <form action="/books" method="GET" class="flex items-center">
                                            <div class="flex-grow">
                                                <div class="relative">
                                                    <div
                                                        class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                                                            viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                                            class="w-5 h-5 text-gray-500">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                                                        </svg>
                                                    </div>
                                                    <input type="text" name="search" value="<%= searchTerm %>"
                                                        placeholder="Buscar por nombre o autor..."
                                                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-emerald-500 focus:border-emerald-500 block w-full pl-10 p-2.5">
                                                </div>
                                            </div>
                                            <button type="submit"
                                                class="ml-2 inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-emerald-600 border  rounded-2xl hover:bg-emerald-700 focus:ring-4 focus:outline-none focus:ring-emerald-300 buscar">
                                                Buscar
                                            </button>
                                            <% if(searchTerm) { %>
                                                <a href="/books"
                                                    class="ml-2 inline-flex items-center px-4 py-2.5 text-sm font-medium text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 focus:ring-4 focus:outline-none focus:ring-gray-100"
                                                    style="border-radius: 6px;">

                                                    Limpiar
                                                </a>
                                                <% } %>
                                        </form>
                                    </div>

                                    <div class="card-body">
                                        <% if(data.length) { %>
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">Nombre</th>
                                                        <th scope="col">Autor</th>
                                                        <th width="200px" class="flex justify-center w-full">Acciones
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(var i=0; i< data.length; i++) { %>
                                                        <tr>
                                                            <th scope="row">
                                                                <%= ((currentPage-1) * 5) + (i+1) %>
                                                            </th>
                                                            <td>
                                                                <%= data[i].name%>
                                                            </td>
                                                            <td>
                                                                <%= data[i].author%>
                                                            </td>
                                                            <td class="d-flex justify-content-around">
                                                                <a href="../books/edit/<%=data[i].id%>"
                                                                    class="hover:text-emerald-900">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                                                                        viewBox="0 0 24 24" stroke-width="1.5"
                                                                        stroke="currentColor"
                                                                        class="size-6 text-emerald-600 hover:text-emerald-900 transition-colors">
                                                                        <path stroke-linecap="round"
                                                                            stroke-linejoin="round"
                                                                            d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                                                                    </svg>
                                                                </a>
                                                                <a href="../books/delete/<%=data[i].id%>"
                                                                    onclick="return confirm('¿Estás seguro de que deseas eliminar este libro?')"
                                                                    class="hover:text-red-700">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                                                                        viewBox="0 0 24 24" stroke-width="1.5"
                                                                        stroke="currentColor"
                                                                        class="size-6 text-red-500 hover:text-red-700 transition-colors">
                                                                        <path stroke-linecap="round"
                                                                            stroke-linejoin="round"
                                                                            d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                                                    </svg>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                </tbody>
                                            </table>

                                            <!-- Pagination -->
                                            <% if(totalPages> 1) { %>
                                                <div class="mt-4 flex justify-center">
                                                    <nav aria-label="Page navigation">
                                                        <ul class="pagination">
                                                            <!-- Previous page -->
                                                            <li
                                                                class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                                <a class="page-link"
                                                                    href="/books?page=<%= currentPage-1 %><%= searchTerm ? '&search=' + searchTerm : '' %>"
                                                                    aria-label="Previous">
                                                                    <span aria-hidden="true">&laquo;</span>
                                                                </a>
                                                            </li>

                                                            <!-- Page numbers -->
                                                            <% for(let i=1; i <=totalPages; i++) { %>
                                                                <li
                                                                    class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                                    <a class="page-link"
                                                                        href="/books?page=<%= i %><%= searchTerm ? '&search=' + searchTerm : '' %>">
                                                                        <%= i %>
                                                                    </a>
                                                                </li>
                                                                <% } %>

                                                                    <!-- Next page -->
                                                                    <li
                                                                        class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                                        <a class="page-link"
                                                                            href="/books?page=<%= currentPage+1 %><%= searchTerm ? '&search=' + searchTerm : '' %>"
                                                                            aria-label="Next">
                                                                            <span aria-hidden="true">&raquo;</span>
                                                                        </a>
                                                                    </li>
                                                        </ul>
                                                    </nav>
                                                </div>
                                                <% } %>

                                                    <% } else { %>
                                                        <div class="py-8 text-center">
                                                            <% if(searchTerm) { %>
                                                                <p class="text-gray-600">No se encontraron libros con el
                                                                    término "<%= searchTerm %>"</p>
                                                                <a href="/books"
                                                                    class="mt-3 inline-block px-4 py-2 text-sm font-medium text-white bg-emerald-600 rounded-lg hover:bg-emerald-700">Ver
                                                                    todos los libros</a>
                                                                <% } else { %>
                                                                    <p class="text-gray-600">No hay libros registrados.
                                                                    </p>
                                                                    <a href="/books/add"
                                                                        class="mt-3 inline-block px-4 py-2 text-sm font-medium text-white bg-emerald-600 rounded-lg hover:bg-emerald-700">Añadir
                                                                        el primer libro</a>
                                                                    <% } %>
                                                        </div>
                                                        <% } %>
                                    </div>
                                </div>
            </div>
    </div>

    <%- include('../plantillas/footer') %>
</body>

</html>