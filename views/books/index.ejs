<!DOCTYPE html>
<html lang="es" class="h-full">

<head>
    <meta charset="UTF-8">
    <title>Listado de libros</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <style>
        html,
        body {
            height: 100%;
            margin: 0;
        }

        .table-responsive {
            overflow-x: auto;
        }
    </style>
</head>

<body class="bg-emerald-50 flex min-h-screen w-screen h-full">

    <!-- SIDEBAR -->
    <%- include('../plantillas/sidebar') %>

        <!-- CONTENIDO PRINCIPAL -->
        <div class="flex flex-col flex-1 w-full min-h-screen">

            <!-- HEADER -->
            <%- include('../plantillas/header1') %>

                <!-- MAIN -->
                <main class="flex-1 min-h-[calc(100vh-100px)] p-4">
                    <div class="container-fluid">

                        <% if (messages.success) { %>
                            <div class="alert alert-success"><%- messages.success %></div>
                            <% } %>
                                <% if (messages.error) { %>
                                    <div class="alert alert-danger"><%- messages.error %></div>
                                    <% } %>

                                        <div class="card">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <h5 class="mb-0">📚 Listado de libros</h5>
                                                <% if (user && (user.role_name==='ADMIN' || user.role_name==='LIBRARIAN'
                                                    )) { %>
                                                    <div>
                                                        <a href="/books/restore" class="btn btn-outline-success mr-2">
                                                            <i class="fas fa-undo"></i> Recuperar
                                                        </a>
                                                        <a href="/books/add" class="btn btn-success">
                                                            <i class="fas fa-plus"></i> Añadir Libros
                                                        </a>
                                                    </div>
                                                    <% } %>
                                            </div>

                                            <div class="card-body">
                                                <form method="GET" action="/books" class="form-inline mb-3">
                                                    <input type="text" name="search" value="<%= searchTerm %>"
                                                        placeholder="Buscar por nombre o autor..."
                                                        class="form-control mr-2" style="min-width: 300px;">
                                                    <button type="submit"
                                                        class="btn btn-outline-success">Buscar</button>
                                                    <% if (searchTerm) { %>
                                                        <a href="/books"
                                                            class="btn btn-outline-secondary ml-2">Limpiar</a>
                                                        <% } %>
                                                </form>

                                                <% if (data.length> 0) { %>
                                                    <div class="table-responsive">
                                                        <table class="table table-striped">
                                                            <thead>
                                                                <tr>
                                                                    <th>#</th>
                                                                    <th>Nombre</th>
                                                                    <th>Autor</th>
                                                                    <th>ISBN</th>
                                                                    <th>Año</th>
                                                                    <th>Páginas</th>
                                                                    <th>Categoría</th>
                                                                    <th>Editorial</th>
                                                                    <% if (user && (user.role_name==='ADMIN' ||
                                                                        user.role_name==='LIBRARIAN' )) { %>
                                                                        <th class="text-center">Acciones</th>
                                                                        <% } %>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% data.forEach((book, i)=> { %>
                                                                    <tr>
                                                                        <td>
                                                                            <%= ((currentPage - 1) * 5) + (i + 1) %>
                                                                        </td>
                                                                        <td>
                                                                            <%= book.name %>
                                                                        </td>
                                                                        <td>
                                                                            <%= book.author_name %>
                                                                        </td>
                                                                        <td>
                                                                            <%= book.isbn %>
                                                                        </td>
                                                                        <td>
                                                                            <%= book.year_published %>
                                                                        </td>
                                                                        <td>
                                                                            <%= book.num_pages %>
                                                                        </td>
                                                                        <td>
                                                                            <%= book.category_name %>
                                                                        </td>
                                                                        <td>
                                                                            <%= book.publisher_name %>
                                                                        </td>
                                                                        <% if (user && (user.role_name==='ADMIN' ||
                                                                            user.role_name==='LIBRARIAN' )) { %>
                                                                            <td class="text-center">
                                                                                <a href="/books/edit/<%= book.id_book %>"
                                                                                    class="btn btn-sm btn-warning">
                                                                                    <i class="fas fa-edit"></i> Editar
                                                                                </a>
                                                                                <a href="/books/delete/<%= book.id_book %>"
                                                                                    onclick="return confirm('¿Está seguro que desea eliminar este libro?')"
                                                                                    class="btn btn-sm btn-danger">
                                                                                    <i class="fas fa-trash"></i>
                                                                                    Eliminar
                                                                                </a>
                                                                            </td>
                                                                            <% } %>
                                                                    </tr>
                                                                    <% }) %>
                                                            </tbody>
                                                        </table>
                                                    </div>

                                                    <% if (totalPages> 1) { %>
                                                        <nav class="mt-3">
                                                            <ul class="pagination justify-content-center">
                                                                <li
                                                                    class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                                    <a class="page-link custom-green"
                                                                        href="/books?page=<%= currentPage - 1 %><%= searchTerm ? '&search=' + searchTerm : '' %>">&laquo;</a>
                                                                </li>
                                                                <% for (let i=1; i <=totalPages; i++) { %>
                                                                    <li
                                                                        class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                                        <a class="page-link custom-green"
                                                                            href="/books?page=<%= i %><%= searchTerm ? '&search=' + searchTerm : '' %>">
                                                                            <%= i %>
                                                                        </a>
                                                                    </li>
                                                                    <% } %>
                                                                        <li
                                                                            class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                                            <a class="page-link custom-green"
                                                                                href="/books?page=<%= currentPage + 1 %><%= searchTerm ? '&search=' + searchTerm : '' %>">&raquo;</a>
                                                                        </li>
                                                            </ul>
                                                        </nav>
                                                        <% } %>
                                                            <% } else { %>
                                                                <div class="text-center text-muted py-5">
                                                                    <% if (searchTerm) { %>
                                                                        <p>No se encontraron libros con "<%= searchTerm
                                                                                %>"</p>
                                                                        <a href="/books"
                                                                            class="btn btn-outline-secondary">Ver
                                                                            todos</a>
                                                                        <% } else { %>
                                                                            <p>No hay libros registrados.</p>
                                                                            <% if (user && (user.role_name==='ADMIN' ||
                                                                                user.role_name==='LIBRARIAN' )) { %>
                                                                                <a href="/books/add"
                                                                                    class="btn btn-success">Agregar el
                                                                                    primero</a>
                                                                                <% } %>
                                                                                    <% } %>
                                                                </div>
                                                                <% } %>
                                            </div>
                                        </div>

                    </div>
                </main>

                <!-- FOOTER -->
                <%- include('../plantillas/footer') %>

        </div>

        <!-- Font Awesome -->
        <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
</body>

</html>